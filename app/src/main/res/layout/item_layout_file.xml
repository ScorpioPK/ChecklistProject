<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_background_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deleteItem"
        android:layout_margin="4dp"
        android:gravity="center_vertical|right"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:paddingRight="@dimen/defaultPadding"
        android:textStyle="bold"
        android:text="EDIT"/>
    <TextView
        android:id="@+id/item_background_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/editItem"
        android:layout_margin="4dp"
        android:gravity="center_vertical|left"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:paddingLeft="@dimen/defaultPadding"
        android:textStyle="bold"
        android:text="DELETE"/>
<android.support.v7.widget.CardView
    android:id="@+id/item_cardview"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_item_height"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fieldTextSize"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/fieldTextColor"/>
            <TextView
                android:id="@+id/item_details_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fieldSubtextSize"
                android:paddingLeft="@dimen/defaultPadding"
                android:textColor="@color/fieldSubtextColor"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/checkmark"
            android:layout_marginRight="@dimen/defaultPadding"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
</LinearLayout>
</android.support.v7.widget.CardView>
</FrameLayout>