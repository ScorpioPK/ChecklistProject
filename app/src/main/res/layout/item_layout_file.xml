<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
<android.support.v7.widget.CardView
    android:id="@+id/item_cardview"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">
<LinearLayout
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_item_height"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fieldTextSize"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/fieldTextColor"/>
    <TextView
        android:id="@+id/item_details_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fieldSubtextSize"
        android:paddingLeft="@dimen/defaultPadding"
        android:textColor="@color/fieldSubtextColor"/>
</LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>