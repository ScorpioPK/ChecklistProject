<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_item_height"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/list_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fieldTextSize"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/fieldTextColor"/>

        <Button
            android:id="@+id/list_button"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/plus_button_background"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"/>
</LinearLayout>