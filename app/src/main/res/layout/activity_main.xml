<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@android:color/background_light">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Main Title"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>
<!--
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_layout"
            layout="@layout/edittext_view"
            android:layout_marginTop="20dp"/>
-->
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/main_recyclerview"/>
    </LinearLayout>
    <Button
        android:id="@+id/plus_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/plus_button_background"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="40dp"
        android:stateListAnimator="@null"/>
    <LinearLayout
        android:id="@+id/add_new_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black70"
        android:padding="10dp"
        android:gravity="center"
        android:clickable="true"
        android:visibility="gone">
        <com.example.scorpiopk.checklist.AddNewItemView
            android:id="@+id/add_item_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>
