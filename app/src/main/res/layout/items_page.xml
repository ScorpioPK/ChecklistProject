<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/defaultPadding"
        android:paddingRight="@dimen/defaultPadding"
        android:background="@android:color/background_light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/back_button"
                android:layout_width="@dimen/titleHeight"
                android:layout_height="@dimen/titleHeight"
                android:padding="6dp"
                android:background="@drawable/bar_button_background"
                android:clickable="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_button"/>
            </LinearLayout>
            <TextView
                android:id="@+id/title_textview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleHeight"
                android:text="Main Title"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/options_button"
                android:layout_width="@dimen/titleHeight"
                android:layout_height="@dimen/titleHeight"
                android:padding="6dp"
                android:background="@drawable/bar_button_background"
                android:clickable="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/options_button"/>
                </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>
        <LinearLayout
            android:id="@+id/add_new_item_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/addItemHeightClosed"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:paddingTop="@dimen/defaultPadding"
            android:paddingBottom="@dimen/defaultPadding"
            android:gravity="center"
            android:clickable="true">
            <com.example.scorpiopk.checklist.items.AddNewItemView
                android:id="@+id/add_item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/items_recyclerview"/>
    </LinearLayout>
    <Button
        android:id="@+id/plus_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/plus_button_background"
        android:layout_gravity="right|top"
        android:layout_marginTop="12dp"
        android:layout_marginRight="60dp"
        android:stateListAnimator="@null"/>

</FrameLayout>
